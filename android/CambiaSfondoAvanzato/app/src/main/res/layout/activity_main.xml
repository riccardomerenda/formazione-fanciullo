        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
            android:background="@color/Giallo"
            android:id="@+id/sfondoActvity">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:background="@color/BlueGrey"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:layout_alignParentBottom="true">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Giallo"
                    android:id="@+id/buttonGiallo"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="60dp"
                    android:background="@color/Giallo"
                    android:textColor="@color/Nero"
                    android:onClick="cambiaSfondo"
                    android:padding="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rosso"
                    android:id="@+id/buttonRosso"
                    android:background="@color/Rosso"
                    android:textColor="@color/Bianco"
                    android:onClick="cambiaSfondo"
                    android:padding="10dp"
                    android:layout_alignTop="@+id/buttonGiallo"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Verde"
                    android:id="@+id/buttonVerde"
                    android:layout_alignTop="@+id/buttonRosso"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/Verde"
                    android:textColor="@color/Bianco"
                    android:onClick="cambiaSfondo"
                    android:padding="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Blue"
                    android:id="@+id/buttonBlue"
                    android:layout_below="@+id/buttonRosso"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/Blue"
                    android:textColor="@color/Bianco"
                    android:onClick="cambiaSfondo"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Rosa"
                    android:id="@+id/buttonRosa"
                    android:layout_alignTop="@+id/buttonBlue"
                    android:layout_centerHorizontal="true"
                    android:onClick="cambiaSfondo"
                    android:padding="10dp"
                    android:background="@color/Rosa"
                    android:textColor="@color/Bianco"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Arancio"
                    android:id="@+id/buttonArancio"
                    android:layout_alignBottom="@+id/buttonRosa"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:onClick="cambiaSfondo"
                    android:padding="10dp"
                    android:background="@color/Arancio"
                    android:textColor="@color/Bianco"/>
            </RelativeLayout>
        </RelativeLayout>
